<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContratanteNewService">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Novo serviço"
                    android:textSize="32sp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/colorPrimary"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:width="300dp"
                    android:height="70dp"
                    android:text="Limpeza padrão"
                    android:onClick="limpezaPadrao"
                    android:textSize="20sp"
                    android:layout_marginBottom="10sp"
                    android:drawableLeft="@drawable/limpezapadrao"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="wrap_content"
                    android:width="300dp"
                    android:layout_marginBottom="10sp"
                    android:text="Limpeza pesada"
                    android:onClick="limpezaPesada"
                    android:textSize="20sp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorPrimary"
                    android:drawableLeft="@drawable/limpezapesada"
                    android:height="70dp"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="wrap_content"
                    android:width="300dp"
                    android:text="Passar roupa"
                    android:onClick="passarRoupa"
                    android:textSize="20sp"
                    android:height="70dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_icon_iron"
                    android:layout_marginBottom="10sp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/border_navigator"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_iconPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plus"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/tv_iconAlign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/align"
                android:layout_marginRight="50dp"/>
            <TextView
                android:id="@+id/tv_iconSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@drawable/search"/>

            <TextView
                android:id="@+id/tv_iconUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>