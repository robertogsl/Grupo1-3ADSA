<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContratanteList">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_back"
            app:tint="@color/white"
            android:layout_gravity="left"
            android:padding="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ServiÃ§os em aberto"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="320dp"
                    android:height="70dp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/limpezapesada"
                    android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                    android:backgroundTint="@color/white"
                    android:id="@+id/btn_1"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="320dp"
                    android:height="70dp"
                    android:text="Passar roupa"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_icon_iron"
                    android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                    android:backgroundTint="@color/white"
                    android:id="@+id/btn_2"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="320dp"
                    android:height="70dp"
                    android:text="Limpeza pesada"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/limpezapesada"
                    android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                    android:backgroundTint="@color/white"
                    android:id="@+id/btn_3"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_iconPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plus"
                android:layout_marginRight="50dp"
                android:onClick="telaAddJob"/>
            <TextView
                android:id="@+id/tv_iconAlign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/align"
                android:layout_marginRight="50dp"
                android:onClick="telaServicos"/>
            <TextView
                android:id="@+id/tv_iconSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@drawable/search"
                android:onClick="telaMapa"/>

            <TextView
                android:id="@+id/tv_iconUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user"
                android:onClick="telaPerfil"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>